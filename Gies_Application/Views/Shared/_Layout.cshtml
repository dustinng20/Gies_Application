<!DOCTYPE html>
<html>
<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>@ViewBag.Title - My ASP.NET Application</title>
		@Styles.Render("~/Content/css")
		@Scripts.Render("~/bundles/modernizr")

</head>
<body>
		<div class="navbar navbar-inverse navbar-fixed-top">
				<div class="container">
						<div class="navbar-header">
								<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
										<span class="icon-bar"></span>
										<span class="icon-bar"></span>
										<span class="icon-bar"></span>
								</button>
								@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
						</div>
						<div class="navbar-collapse collapse">
							<ul class="nav navbar-nav">

								@if (Request.IsAuthenticated && User.IsInRole("Admin"))
								{
									<li>@Html.ActionLink("New User", "Register", "Account")</li>
									<li>@Html.ActionLink("ManageUser", "UsersWithRoles", "ManageUsers")</li>
								}
							
								
								@if (Request.IsAuthenticated && User.IsInRole("Staff"))
								{
									<li>@Html.ActionLink("Manage", "Index", "ManagerStaffViewModels")</li>
									<li>@Html.ActionLink("New User", "Register", "Account")</li>
									<li>@Html.ActionLink("Category", "Index", "Categories")</li>
									<li>@Html.ActionLink("Course", "Index", "Courses")</li>
									<li>@Html.ActionLink("Topic", "Index", "Topics")</li>

								}

									@if (Request.IsAuthenticated && User.IsInRole("Trainee"))
									{
										<li>@Html.ActionLink("Category", "Index", "Categories")</li>
										<li>@Html.ActionLink("Course", "Index", "Courses")</li>
									}
								
									
									@if (Request.IsAuthenticated && User.IsInRole("Trainer"))
									{
										<li>@Html.ActionLink("Category", "Index", "Categories")</li>
										<li>@Html.ActionLink("Course", "Index", "Courses")</li>
										<li>@Html.ActionLink("Profile", "Index", "Trainers")</li>
									}


								
							</ul>
								@Html.Partial("_LoginPartial")
						</div>
				</div>
		</div>
		<div class="container body-content">
				@RenderBody()
				<hr />
				<footer>
						<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
				</footer>
		</div>

		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
</body>
</html>
