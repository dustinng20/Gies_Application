@model IEnumerable<Gies_Application.Models.Enrollment>
@{
	ViewBag.Title = "Index";
}
<h2>Enrollment</h2>
<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
	<tr>
		<th>Id</th>
		<th>Student</th>
		<th>CourseCategory</th>
		<th>Course</th>
		<th>Delete</th>
		<th>Edit</th>
	</tr>
	@foreach (var enrollment in Model)
	{
<tr>
	<td>@enrollment.Id</td>
	<td>@enrollment.trainee.FullName</td>
	<td>@enrollment.CourseCategory.CourseCategoryName</td>
	<td>@enrollment.Course.</td>
	<td><a href="@Url.Action("Delete", "Movies", new { id = enrollment.Id })">Delete</a></td>
	<td><a href="@Url.Action("Edit", "Movies", new { id = enrollment.Id })">Edit</a></td>
</tr>
	}
</table>


